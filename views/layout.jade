            var api_host = "http://#{api_host}:#{port}";
        title= title
        script(src='/lib/jquery/dist/jquery.min.js', charset='UTF-8')
        script(src='/lib/bootstrap/js/dropdown.js', charset='UTF-8')
        script(src='/lib/d3/d3.min.js', charset='UTF-8')
        script(src='/lib/d3-legend/d3-legend.min.js', charset='UTF-8')
        script(src='/lib/angular/angular.min.js', charset='UTF-8')
        script(src='/lib/angular-sanitize/angular-sanitize.min.js', charset="UTF-8")
        script(src='/js/common.js', charset='UTF-8')
        script(src='/js/crudPrvd.js', charset='UTF-8')
        script(src='/js/resultPrvd.js', charset='UTF-8')
        script(src='/js/musicCtrl.js', charset='UTF-8')
        script(src='/js/indexCtrl.js', charset='UTF-8')
